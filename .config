/* Initialization */

# Initialize project
$ yarn init -y

/* Typescript */

# Add typescript as development dependency
$ yarn add typescript -D

# Start default tsconfig.json file
$ yarn tsc --init

# Convert typescript files from "rootDir" to javascript files on "outDir"
$ yarn tsc

/* Development server */

# Add ts-node-dev as development dependency to auto build our server on dev
$ yarn add ts-node-dev -D

/* ESLint */

# Add eslint dependency (Versions 7.* have some incompatibilities)
$ yarn add eslint@6.8.0 -D

# Initialize esline
$ yarn eslint --init

# Add fix for typescript imports
$ yarn add eslint-import-resolver-typescript -D

/* Prettier */

# Add prettier dependency
$ yarn add prettier eslint-config-prettier eslint-plugin-prettier -D
